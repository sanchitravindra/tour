<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.android.tour.MainActivity">


        <Button
            android:id="@+id/rain_destination1"
            style="@style/CategoryStyle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rain2"
            android:gravity="center"
            android:text="@string/Rain_destination_1"
            android:textColor="#ffffff"
            android:textSize="44sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/rain_destination2"
            style="@style/CategoryStyle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/costa1"
            android:gravity="center"
            android:text="@string/Rain_destination_2"
            android:textColor="#ffffff"
            android:textSize="44sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>
